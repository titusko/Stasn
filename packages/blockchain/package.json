    "eslint": "^8.54.0",
    "eslint-config-custom": "workspace:*",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.7",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2",
